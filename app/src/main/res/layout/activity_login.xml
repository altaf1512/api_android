<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main"
    tools:context=".LoginActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="19.50dp"
        android:layout_marginTop="19.50dp"
        android:layout_marginEnd="19.50dp"
        android:layout_marginBottom="19.50dp"
        android:fontFamily=""
        android:text="Titik Suara"
        android:textColor="@color/black"
        android:textSize="20dp"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_marginTop="104.00dp"
        android:orientation="vertical"
        android:background="@drawable/container_login"
        android:padding="19.50dp"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:fontFamily=""
            android:text="LOGIN"
            android:textColor="@color/black"
            android:textSize="20.00sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masukkan Username dan Password Anda"
            android:layout_gravity="center"
            android:fontFamily=""
            android:textColor="@color/black"
            android:textSize="13.00sp"/>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13.00dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="6.50dp"
                    android:textColor="@color/black"
                    app:boxCornerRadiusBottomEnd="13.00dp"
                    app:boxCornerRadiusBottomStart="13.00dp"
                    app:boxCornerRadiusTopEnd="13.00dp"
                    app:boxCornerRadiusTopStart="13.00dp"
                    app:startIconDrawable="@drawable/ic_person">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_username"
                        android:paddingStart="48dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily=""
                        android:hint="Username"
                        android:textColor="@color/black"
                        app:boxStrokeColor="@color/red"
                        app:endIconMode="clear_text"
                        android:textSize="14.30dp">
                    </com.google.android.material.textfield.TextInputEditText>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6.50dp"
                    android:textColor="@color/black"
                    app:boxCornerRadiusBottomEnd="13.00dp"
                    app:boxCornerRadiusBottomStart="13.00dp"
                    app:boxCornerRadiusTopEnd="13.00dp"
                    app:boxCornerRadiusTopStart="13.00dp"
                    app:passwordToggleEnabled="true"
                    app:startIconDrawable="@drawable/ic_lock">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_password"
                        android:paddingStart="48dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily=""
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:textColor="@color/black"
                        app:boxStrokeColor="@color/red"
                        android:textSize="14.30dp">
                    </com.google.android.material.textfield.TextInputEditText>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30.00dp"
                    android:elevation="0dp"
                    android:onClick="btnLogin"
                    android:text="Masuk"
                    android:backgroundTint="@color/red"
                    android:textAllCaps="false"
                    app:cornerRadius="19.50dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="26dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"/>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.appcompat.widget.LinearLayoutCompat>

</RelativeLayout>