<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvPengaduanItem"
        android:layout_width="match_parent"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toStartOf="@id/txtTimestamp"
                android:layout_marginEnd="@dimen/_8sdp">

                <TextView
                    android:id="@+id/txtKategoriNotifikasi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_9sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:text="Kategori Notifikasi"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtisiNotifikasi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_9sdp"
                    android:maxLength="50"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="Deskripsi singkat notifikasi akan ditampilkan di sini" />

            </LinearLayout>

            <TextView
                android:id="@+id/txtTimestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:textSize="12sp"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>