<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white"
    android:gravity="center">

    <!-- Title Section -->
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tambah Pengaduan Baru"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/popsem"
        android:gravity="center"
        android:layout_marginBottom="20dp" />

    <!-- CardView Container -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/main">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Jenis Kerusakan -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jenis Kerusakan"
                android:textColor="@android:color/white"
                android:fontFamily="@font/popsem"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/spinnerJenisKerusakan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@color/white" />

            <!-- Isi Laporan -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Isi Laporan"
                android:textColor="@android:color/white"
                android:fontFamily="@font/popsem"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etIsiLaporan"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:hint="Isi laporan Anda"
                android:padding="10dp"
                android:background="@android:color/white"
                android:textColor="@android:color/black"
                android:fontFamily="@font/popmed"
                android:textSize="14sp"
                android:gravity="start|top"
                android:layout_marginBottom="16dp" />

            <!-- Foto Pendukung -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Foto Pendukung"
                android:textColor="@android:color/white"
                android:fontFamily="@font/popsem"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <ImageView
                android:id="@+id/ivPreviewImg"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background"
                android:layout_marginBottom="16dp"
                android:background="@android:color/white"
                />

            <!-- Pilih Gambar Button -->
            <Button
                android:id="@+id/btnPilihGambar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pilih Gambar"
                android:backgroundTint="@color/teal_700"
                android:textColor="@android:color/white"
                android:fontFamily="@font/popmed"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"
                android:elevation="4dp" />

            <!-- Kirim Button -->
            <Button
                android:id="@+id/btnKirim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kirim"
                android:backgroundTint="@color/teal_700"
                android:textColor="@android:color/white"
                android:fontFamily="@font/popmed"
                android:textSize="16sp"
                android:elevation="20dp"
                android:layout_marginBottom="16dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
